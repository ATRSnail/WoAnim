<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/scrllow_mine"
    android:scrollbars="none"
    android:background="@color/color_999999"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/color_e4e4e4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_210">
                <com.wodm.android.view.newview.AtyTopLayout
                    android:id="@+id/set_topbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    app:CustomtitleTextColor="@android:color/black"
                    app:CustomtitleTextSize="@dimen/text_size_36_px"
                    app:BackGroundColor="@color/color_e4e4e4"
                    app:Customtoptitle=""
                    app:leftBackGround="@mipmap/ic_launcher"
                    app:rightType="0"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_head_imgs"
                android:layout_marginLeft="@dimen/px_45"
                android:layout_marginTop="@dimen/px_132"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <org.eteclab.ui.widget.CircularImage
                    android:id="@+id/user_head_imgs"
                    android:layout_width="@dimen/px_138"
                    android:layout_height="@dimen/px_138"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/touxiang" />
                <org.eteclab.ui.widget.CircularImage
                    android:layout_marginLeft="-16dp"
                    android:layout_toRightOf="@+id/user_head_imgs"
                    android:layout_width="@dimen/px_52"
                    android:layout_height="@dimen/px_52"
                    android:src="@mipmap/touxiang" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_user_info"
                android:layout_marginTop="-15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_head_imgs"
                android:textSize="@dimen/text_size_24_px"
                android:layout_gravity="right"
                android:text="@string/persion_info"
                android:layout_width="@dimen/px_180"
                android:layout_height="@dimen/px_80" />
        </RelativeLayout>
        <LinearLayout
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/px_45"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:textSize="@dimen/text_size_36_px"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@mipmap/sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_attention"
                    android:text="98"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="关注"
                    android:textSize="@dimen/text_size_28_px"
                    android:textColor="@color/color_999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_likes"
                    android:text="98"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px"
                    android:layout_marginLeft="@dimen/px_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="粉丝"
                    android:textColor="@color/color_999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/px_15"
                android:layout_marginLeft="@dimen/px_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/degree_progress"
                    android:layout_width="@dimen/px_360"
                    android:layout_height="@dimen/px_36"
                    android:max="100"
                    android:progress="40"
                    android:secondaryProgress="70"
                    android:layout_centerVertical="true"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/degree_pro"/>

                <Button
                    android:id="@+id/btn_degree"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_24_px"
                    android:background="@drawable/btn_circle"/>
            </RelativeLayout>
            <TextView
                android:layout_marginBottom="@dimen/px_45"
                android:layout_marginLeft="@dimen/px_45"
                android:id="@+id/tv_sign"
                android:layout_marginTop="@dimen/px_10"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/color_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qianming"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_margin="@dimen/px_45"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_36_px"
                    android:textColor="@color/color_333333"
                    android:text="@string/mine_xunzhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="@dimen/px_5"
                    android:layout_toLeftOf="@+id/img_more"
                    android:textSize="@dimen/text_size_30_px"
                    android:textColor="@color/color_999999"
                    android:text="@string/more_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/px_45"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="@dimen/px_96"
                        android:layout_height="@dimen/px_96" />
                    <TextView
                        android:layout_marginTop="@dimen/px_22"
                        android:text="麋鹿"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="@dimen/px_96"
                        android:layout_height="@dimen/px_96" />
                    <TextView
                        android:layout_marginTop="@dimen/px_22"
                        android:text="英雄联盟"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="@dimen/px_96"
                        android:layout_height="@dimen/px_96" />
                    <TextView
                        android:layout_marginTop="@dimen/px_22"
                        android:text="斗图"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="@dimen/px_96"
                        android:layout_height="@dimen/px_96" />
                    <TextView
                        android:layout_marginTop="@dimen/px_22"
                        android:text="中二病"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"></View>

            <RelativeLayout
                android:layout_margin="@dimen/px_45"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_36_px"
                    android:textColor="@color/color_333333"
                    android:text="@string/mine_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="@dimen/px_5"
                    android:layout_toLeftOf="@+id/img2_more"
                    android:textSize="@dimen/text_size_30_px"
                    android:textColor="@color/color_999999"
                    android:text="@string/join_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/img2_more"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="@dimen/px_45"
                android:layout_marginLeft="@dimen/px_45"
                android:layout_marginBottom="@dimen/px_45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wodm.android.view.newview.MyGridView
                    android:verticalSpacing="@dimen/px_30"
                    android:horizontalSpacing="@dimen/px_30"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_216"
                    android:id="@+id/gv_comments">

                </com.wodm.android.view.newview.MyGridView>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>