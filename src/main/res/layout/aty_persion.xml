<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/color_e4e4e4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_210">
                <com.wodm.android.view.newview.AtyTopLayout
                    android:id="@+id/set_topbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    app:CustomtitleTextColor="@android:color/black"
                    app:CustomtitleTextSize="@dimen/text_size_36_px"
                    app:BackGroundColor="@color/color_e4e4e4"
                    app:Customtoptitle=""
                    app:leftBackGround="@mipmap/ic_launcher"
                    app:rightType="0"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/px_45"
                android:layout_marginTop="@dimen/px_132"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <org.eteclab.ui.widget.CircularImage
                    android:id="@+id/user_head_imgs"
                    android:layout_width="@dimen/px_138"
                    android:layout_height="@dimen/px_138"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/touxiang" />
                <org.eteclab.ui.widget.CircularImage
                    android:layout_marginLeft="-16dp"
                    android:layout_toRightOf="@+id/user_head_imgs"
                    android:layout_width="@dimen/px_52"
                    android:layout_height="@dimen/px_52"
                    android:src="@mipmap/touxiang" />
            </RelativeLayout>


        </RelativeLayout>
        <Button
            android:layout_gravity="right"
            android:text="@string/persion_info"
            android:layout_width="@dimen/px_135"
            android:layout_height="@dimen/px_45" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/px_45"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="昵称"
                    android:textSize="@dimen/text_size_36_px"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@mipmap/ic_launcher"
                    android:layout_width="@dimen/px_18"
                    android:layout_height="@dimen/px_10" />
                <TextView
                    android:text="98"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="关注"
                    android:textSize="@dimen/text_size_28_px"
                    android:textColor="@color/color_999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="98"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px"
                    android:layout_marginLeft="@dimen/px_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="粉丝"
                    android:textColor="@color/color_999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/px_15"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_gravity="center"
                    android:text="LV3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24_px"
                    android:background="@drawable/btn_circle"/>
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/my_progress"
                    android:layout_width="@dimen/px_320"
                    android:layout_height="@dimen/px_24"
                    android:max="100"
                    android:progress="40"
                    android:secondaryProgress="70"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/degree_pro"/>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/px_45"
                android:id="@+id/tv_sign"
                android:layout_marginTop="@dimen/px_10"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/color_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qianming"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>