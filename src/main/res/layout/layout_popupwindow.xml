<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/px_30"
    android:orientation="vertical">


    <TextView
        android:id="@+id/popup_text_title"
        style="@style/UserInfo_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/px_60"
        android:textSize="@dimen/text_size_38_px"
        />


    <TextView
        android:id="@+id/popup_text"
        style="@style/UserInfo_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/px_60"
        android:textSize="@dimen/text_size_26_px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_50"
        android:orientation="vertical">
        <Button
            android:id="@+id/popup_btn_one"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/shape_angle_rectangle_solid_white"
            android:textColor="@android:color/holo_red_light"
            />
        <Button
            android:id="@+id/popup_btn_two"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/shape_angle_rectangle_solid_white"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>


</LinearLayout>
