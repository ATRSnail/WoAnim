<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_168"
        android:layout_margin="@dimen/px_30"
        android:gravity="center_vertical">

        <org.eteclab.ui.widget.CircularImage
            android:id="@+id/message_new"
            android:layout_width="@dimen/px_108"
            android:layout_height="@dimen/px_108"
            android:src="@mipmap/moren_header" />

        <TextView
            android:id="@+id/name_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:layout_toRightOf="@id/message_new"
            android:gravity="center"
            android:text="系统通知"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_30_px" />

        <TextView
            android:id="@+id/center_name_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name_message"
            android:layout_toRightOf="@id/name_message"
            android:gravity="center"
            android:text="wo"
            android:textColor="@color/color_f5912f"
            android:textSize="@dimen/text_size_30_px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_name_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/center_name_message"
            android:layout_toRightOf="@id/center_name_message"
            android:gravity="center"
            android:text="系统通知"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_30_px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_message"
            android:layout_below="@id/name_message"
            android:layout_marginTop="@dimen/px_6"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="您的订单交易成功您的订单交易成功您的订单交易成功"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24_px" />

        <ImageView
            android:id="@+id/choice_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name_message"
            android:src="@mipmap/up_no"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name_message"
            android:text="2016-03-28"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24_px" />

        <TextView
            android:id="@+id/watch_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/info_message"
            android:clickable="true"
            android:text="点击查看"
            android:textColor="@color/color_fb487f"
            android:textSize="@dimen/text_size_30_px" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/color_eae7e7" />

    <View
        android:id="@+id/line_inform_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_14"
        android:background="@color/color_efefef" />

    <View
        android:id="@+id/line_inform_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/color_eae7e7" />
</LinearLayout>