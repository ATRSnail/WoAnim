<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/color_cccccc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wodm.android.view.newview.AtyTopLayout
            android:id="@+id/back_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            app:BackGroundColor="@color/color_f5c92f"
            app:CustomtitleTextColor="@color/color_ffffff"
            app:CustomtitleTextSize="@dimen/text_size_48_px"
            app:Customtoptitle="支付信息"
            app:leftBackGround="@drawable/back_drawable"
            app:rightType="1" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_below="@id/back_pay"
            android:background="@color/color_f5c92f" />

        <RelativeLayout
            android:id="@+id/pay_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line">

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_alignParentTop="true"
                android:background="@color/color_f5c92f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@drawable/pay_circle_corner"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    android:text="中国联通用户"
                    android:textColor="@color/color_f5912f"
                    android:textSize="@dimen/x24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_40"
                    android:layout_marginTop="@dimen/y16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone1_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="189"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x56" />

                    <TextView
                        android:id="@+id/phone2_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0000"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x56" />

                    <TextView
                        android:id="@+id/phone3_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:text="0000"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x56" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pay_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_info"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/pay_circle_corner"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y102"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单详情"
                    android:textColor="@color/color_f5912f"
                    android:textSize="@dimen/x40"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:background="@color/color_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_30"
                    android:text="类别：VIP会员服务/30天"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/x30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_30"
                    android:layout_marginTop="@dimen/px_30"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="购买即赠"
                            android:textColor="@color/color_f5912f"
                            android:textSize="@dimen/x22" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/vip_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y16"
                            android:gravity="center"
                            android:text="VIP尊贵标识"
                            android:textColor="@color/color_f5912f"
                            android:textSize="@dimen/x22" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="@dimen/x86"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/vip_pay"
                            android:visibility="invisible" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/jia_pay" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/sj_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y16"
                            android:gravity="center"
                            android:text="随机挂件X1"
                            android:textColor="@color/color_f5912f"
                            android:textSize="@dimen/x22" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:background="@color/color_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y30"
                    android:text="支付说明："
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/x30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员单次购买，重复购买时间累积("
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/x23" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x23" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天/次)"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/x23" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共计"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/x23" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="¥"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x23" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.00"
                        android:textColor="@color/color_f5912f"
                        android:textSize="@dimen/x60" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:id="@+id/discountPri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x16"
                            android:text="¥35"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/x23" />
                        <View
                            android:layout_marginTop="@dimen/y5"
                            android:layout_alignLeft="@id/discountPri"
                            android:layout_alignRight="@id/discountPri"
                            android:layout_centerVertical="true"
                            android:background="@color/color_cccccc"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/y2"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y72"
                    android:layout_marginTop="@dimen/y30">

                    <EditText
                        android:id="@+id/yzm_edit_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/pay_circle_corner2"
                        android:gravity="center_vertical"
                        android:hint="请输入六位验证码"
                        android:inputType="number"
                        android:paddingLeft="@dimen/x24"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/x24" />

                    <Button
                        android:id="@+id/yzm_pay"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/x140"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x16"
                        android:background="@drawable/pay_circle_corner3"
                        android:text="@string/get_code"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/x24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/y30"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/y41"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/zhifu_pay"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pay_ran_getcode"
                        android:enabled="false"
                        android:text="确认支付"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/x30" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_below="@id/pay_details"
            android:background="@color/color_cccccc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"></View>
    </RelativeLayout>
</ScrollView>
