<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:id="@+id/ll_new_main3_adapter"
      android:layout_marginBottom="@dimen/px_30"
      android:layout_marginLeft="@dimen/px_30"
      android:layout_marginRight="@dimen/px_30"
      android:background="@drawable/layout_border_circle"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.wodm.android.view.newview.RoundAngleImageView
          android:id="@+id/img_angle"
          app:isCircleRightBottom="false"
          app:isCircleLeftBottom="false"
          android:scaleType="fitXY"
          android:layout_width="match_parent"
          android:layout_height="@dimen/px_220" />
      <LinearLayout
          android:layout_margin="@dimen/px_16"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:textSize="@dimen/text_size_28_px"
              android:textColor="@color/color_333333"
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:lineSpacingExtra="@dimen/px_3"
              android:lineSpacingMultiplier="1.2"
              android:ellipsize="end"
              android:maxLines="2"
              android:id="@+id/tv_desp"
              android:layout_marginTop="@dimen/px_16"
              android:textSize="@dimen/text_size_22_px"
              android:textColor="@color/color_999999"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
  </LinearLayout>

</LinearLayout>