<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/px_114"
        android:layout_marginRight="@dimen/px_114"
        android:layout_marginTop="@dimen/px_27"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/level_jiantou" />


            <TextView
                android:layout_width="@dimen/px_69"
                android:layout_height="@dimen/px_69"
                android:background="@drawable/btn_level_circle"
                android:gravity="center"
                android:text="LV1"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_22_px" />


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_ffcb4d" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
