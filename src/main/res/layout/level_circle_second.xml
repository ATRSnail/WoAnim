                android:background="@mipmap/level_jiantou" />


            <TextView
                android:layout_width="@dimen/px_69"
                android:layout_height="@dimen/px_69"
                android:background="@drawable/btn_level_circle"
                android:gravity="center"
                android:text="LV1"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_22_px" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:maxEms="5"
            android:text="距离LV3还有332经验值"
            android:textColor="@color/color_ffcb4d"
            android:textSize="@dimen/text_size_22_px" />
