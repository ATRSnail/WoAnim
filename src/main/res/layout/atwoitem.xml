<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efefef"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/px_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <org.eteclab.ui.widget.CircularImage
                    android:id="@+id/atwo_new"
                    android:layout_width="@dimen/px_108"
                    android:layout_height="@dimen/px_108"
                    android:src="@mipmap/moren_header" />
                <org.eteclab.ui.widget.CircularImage
                    android:visibility="gone"
                    android:id="@+id/cicle_new"
                    android:layout_alignParentTop="@id/atwo_new"
                    android:layout_alignRight="@id/atwo_new"
                    android:background="@mipmap/circle_new"
                    android:layout_width="@dimen/px_36"
                    android:layout_height="@dimen/px_36" />

                <TextView
                    android:id="@+id/name_atwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_toRightOf="@id/atwo_new"
                    android:text="会飞的鱼"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_30_px" />

                <ImageView
                    android:id="@+id/reply_atwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/name_atwo"
                    android:src="@mipmap/reply" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/choice_atwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/up_no"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_atwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/name_atwo"
                    android:layout_below="@id/name_atwo"
                    android:layout_marginTop="@dimen/px_6"
                    android:text="2016-03-28"
                    android:textColor="@color/color_cccccc"
                    android:textSize="@dimen/text_size_24_px" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/atwo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡迪那"
                    android:textColor="@color/color_f5912f"
                    android:textSize="@dimen/text_size_34_px" />

                <TextView
                    android:id="@+id/info_atwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=":天窗"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_34_px" />
            </LinearLayout>
            <TextView
                android:id="@+id/laizi_atwo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="27"
                android:singleLine="true"
                android:text="来自【咨询】" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/color_eae7e7" />
</LinearLayout>