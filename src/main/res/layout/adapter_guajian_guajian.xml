<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="@dimen/px_12"
        android:paddingBottom="@dimen/px_24"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/img_guajian_kuang"
            android:background="@mipmap/guajian_select_kuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/ll_guajian"
            android:layout_marginTop="@dimen/px_60"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.eteclab.ui.widget.CircularImage
                android:layout_centerHorizontal="true"
                android:id="@+id/user_head_imgs"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/moren_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_icon"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/px_5"
            android:id="@+id/tv_name"
            android:layout_below="@+id/ll_guajian"
            android:textColor="@color/color_333333"
            android:textSize="20px"
            android:layout_centerHorizontal="true"
            android:text="熊仔头像框"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingBottom="@dimen/px_24"
            android:layout_marginTop="@dimen/px_5"
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_score"
            android:textColor="@color/color_f5921f"
            android:textSize="20px"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>