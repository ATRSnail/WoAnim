<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_every_free"
        android:orientation="horizontal"
        android:background="@drawable/layout_border_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wodm.android.view.newview.RoundAngleImageView
            android:id="@+id/img_angle"
            app:isCircleRightBottom="false"
            app:isCircleRightUp="false"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_marginLeft="@dimen/px_24"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:lineSpacingMultiplier="1.1"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:id="@+id/tv_name"
                   android:layout_marginTop="@dimen/px_24"
                   android:textSize="@dimen/text_size_28_px"
                   android:textColor="@color/color_333333"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_desp"
                   android:lineSpacingMultiplier="1.1"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:layout_marginTop="@dimen/px_16"
                   android:textSize="@dimen/text_size_22_px"
                   android:textColor="@color/color_999999"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
            <Button
                android:id="@+id/btn_read_now"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_24"
                android:layout_marginBottom="@dimen/px_16"
                android:text="立即阅读"
                android:textSize="@dimen/px_24"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/btn_read_now"
                android:layout_width="@dimen/px_160"
                android:layout_height="@dimen/px_48" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>