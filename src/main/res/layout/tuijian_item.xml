<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:layout_height="match_parent">
     <ImageView
         android:scaleType="fitXY"
         android:background="@drawable/rectangle_none"
         android:id="@+id/tuijian_pho"
         android:layout_width="@dimen/px_220"
         android:layout_height="@dimen/px_280" />
    <TextView
        android:layout_marginTop="@dimen/px_16"
        android:id="@+id/tuijian_name"
        android:text=""
        android:textSize="@dimen/text_size_28_px"
        android:textColor="@color/color_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/px_16"
        android:id="@+id/tuijian_info"
        android:text=""
        android:textSize="@dimen/text_size_22_px"
        android:textColor="@color/color_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>