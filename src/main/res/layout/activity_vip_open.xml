<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vip_open"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wodm.android.view.newview.AtyTopLayout
            android:id="@+id/back_vipopen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            app:BackGroundColor="@color/color_ffd805"
            app:CustomtitleTextColor="@android:color/black"
            app:CustomtitleTextSize="@dimen/text_size_48_px"
            app:Customtoptitle="开通VIP"
            app:leftBackGround="@mipmap/back"
            app:rightType="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:layout_marginLeft="@dimen/px_45"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_vip_open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="推广"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_15"
                    android:text="(广告位)"
                    android:textColor="@color/color_cccccc"
                    android:textSize="@dimen/text_size_28_px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_eae7e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:layout_marginLeft="@dimen/px_45"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首次开通VIP可享受更多优惠哦（）来嘛"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_30_px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_eae7e7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_45"
                android:layout_marginRight="@dimen/px_45"
                android:layout_marginTop="@dimen/px_45">

                <com.wodm.android.view.newview.MyGridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_45"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/px_45"
                    android:numColumns="2"
                    android:verticalSpacing="@dimen/px_45" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_2"
                    android:layout_alignLeft="@id/grid"
                    android:layout_alignRight="@id/grid"
                    android:layout_below="@id/grid"
                    android:background="@color/color_eae7e7" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:gravity="center">

                <ImageButton
                    android:layout_width="@dimen/px_30"
                    android:layout_height="@dimen/px_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/renew_vipopen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="自动续费"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_28_px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="(可享受XXX优惠/VIP到期自动付费)"
                    android:textColor="@color/color_cccccc"
                    android:textSize="@dimen/text_size_28_px" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_eae7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efefef"
            android:gravity="top|center_horizontal">

            <Button
                android:id="@+id/pay_vipopen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:layout_margin="@dimen/px_45"
                android:background="@drawable/pay_vipopen"
                android:gravity="center"
                android:text="立即支付60元"
                android:textColor="@color/color_3f190c"
                android:textSize="@dimen/text_size_36_px" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
