<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_240">
    <include layout="@layout/devid_line" android:layout_width="match_parent" android:layout_height="@dimen/px_1"></include>
    <LinearLayout
        android:id="@+id/ll_adapter"
        android:padding="@dimen/px_1"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_240">
        <ImageView
            android:id="@+id/gv_img"
            android:layout_width="@dimen/px_64"
            android:layout_height="@dimen/px_64"
            />
        <TextView
            android:layout_marginTop="@dimen/px_15"
            android:textSize="@dimen/text_size_24_px"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include android:id="@+id/adapter_view" layout="@layout/devid_line" android:layout_width="match_parent" android:layout_height="@dimen/px_1"></include>
</LinearLayout>