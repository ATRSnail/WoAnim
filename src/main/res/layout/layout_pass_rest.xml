<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/px_30">

    <EditText
        android:id="@+id/old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_6"
        android:background="@null"
        android:ems="8"
        android:hint="原来的密码"
        android:inputType="textPassword"
        android:maxLength="11" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="@dimen/px_9"
        android:background="@color/colorAccent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_15"
        android:layout_marginTop="@dimen/px_8"
        android:background="@null"
        android:ems="8"

        android:hint="新的密码"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="@dimen/px_400"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="@dimen/px_9"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/btn_regist"
        android:layout_width="@dimen/px_300"
        android:layout_height="@dimen/px_58"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/shape_button_submint"
        android:paddingBottom="@dimen/px_15"
        android:paddingLeft="@dimen/px_98"
        android:paddingRight="@dimen/px_98"
        android:paddingTop="@dimen/px_15"
        android:src="@mipmap/wancheng_wei" />
</LinearLayout>

