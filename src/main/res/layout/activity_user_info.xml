<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijingtu"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_activity_header_main" />

            <LinearLayout
                android:id="@+id/info_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_400"
                android:background="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/px_50"
                android:paddingTop="@dimen/px_50">

                <org.eteclab.ui.widget.CircularImage
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/px_190"
                    android:layout_height="@dimen/px_190"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/touxiang" />

                <EditText
                    android:id="@+id/user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_18"
                    android:layout_marginLeft="@dimen/px_140"
                    android:layout_marginRight="@dimen/px_140"
                    android:layout_marginTop="@dimen/px_12"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="30"
                    android:maxLines="2"
                    android:textColor="#F34F85"
                    android:textSize="@dimen/text_size_28_px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_name_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_18"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_68"
                    android:layout_marginTop="@dimen/px_6"
                    android:src="@mipmap/gerenxinxi_nichen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="昵称" />

                    <LinearLayout
                        android:id="@+id/layout_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/user_name_hint"
                        android:layout_below="@id/user_name_hint"
                        android:layout_marginLeft="@dimen/px_15"
                        android:layout_marginTop="@dimen/px_9"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textColor="#3D3D3D"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_28_px" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_6"
                android:background="#D8D8D8" />

            <LinearLayout
                android:id="@+id/layout_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_68"
                    android:layout_marginTop="@dimen/px_6"
                    android:src="@mipmap/xingbie" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/user_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:layout_marginTop="@dimen/px_9"
                        android:text="男" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_6"
                android:background="#D8D8D8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_68"
                    android:layout_marginTop="@dimen/px_6"
                    android:src="@mipmap/gerenxinxi_riqi" />

                <LinearLayout
                    android:id="@+id/layout_brithday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="出生日期" />

                    <TextView
                        android:id="@+id/user_brithday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:layout_marginTop="@dimen/px_9"
                        android:text="1900年10月10日" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_6"
                android:background="#D8D8D8" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60"
                android:layout_marginTop="@dimen/px_120"
                android:background="@drawable/shape_angle_rectangle_solid"
                android:text="退出登录"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_36_px"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>