<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/ll_new_comm"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_30"
        android:background="@color/color_ffffff">

        <org.eteclab.ui.widget.CircularImage
            android:id="@+id/pho_comment"
            android:layout_width="@dimen/px_68"
            android:layout_height="@dimen/px_68"
            android:src="@mipmap/moren_header" />

        <TextView
            android:id="@+id/name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_marginTop="@dimen/px_4"
            android:layout_toRightOf="@id/pho_comment"
            android:text="会飞的鱼"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_24_px" />

        <TextView
            android:id="@+id/grade_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name_comment"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_toRightOf="@id/name_comment"
            android:text="LV.12"
            android:textSize="@dimen/text_size_24_px" />

        <TextView
            android:id="@+id/gradename_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name_comment"
            android:layout_alignTop="@id/name_comment"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_toRightOf="@id/grade_comment"
            android:text=""
            android:textSize="@dimen/text_size_24_px" />

        <TextView
            android:id="@+id/time_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_comment"
            android:layout_below="@id/name_comment"
            android:layout_marginTop="@dimen/px_16"
            android:text="16-12-02"
            android:textColor="@color/color_999999"
            android:textSize="18px" />

        <TextView
            android:id="@+id/hour_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_comment"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_toRightOf="@id/time_comment"
            android:text="15:14"
            android:textColor="@color/color_999999"
            android:textSize="18px" />

        <TextView
            android:id="@+id/dianzanNum_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name_comment"
            android:text="17"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24_px" />

        <ImageView
            android:clickable="true"
            android:id="@+id/dianzan_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name_comment"
            android:layout_marginRight="@dimen/px_16"
            android:layout_toLeftOf="@id/dianzanNum_comment"
            android:src="@mipmap/un_zan" />

        <ImageView
            android:clickable="true"
            android:id="@+id/guanzhu_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name_comment"
            android:layout_marginRight="@dimen/px_16"
            android:layout_toLeftOf="@id/dianzan_comment"
            android:src="@mipmap/no_guanzhu" />


        <TextView
            android:clickable="true"
            android:id="@+id/content_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_comment"
            android:layout_below="@id/time_comment"
            android:layout_marginTop="@dimen/px_20"
            android:text="噫......一股酸菜味道"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_28_px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_68"
        android:background="@color/color_cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_68"
        android:layout_marginRight="@dimen/px_30"
        android:background="@drawable/bg_corner"
        android:orientation="horizontal"
        android:padding="@dimen/px_30">

        <TextView
            android:id="@+id/atwo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这瓜不甜:"
            android:textColor="@color/color_fb487f"
            android:textSize="@dimen/text_size_28_px" />

        <TextView
            android:id="@+id/atwo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="天窗"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_28_px" />
    </LinearLayout>
</LinearLayout>