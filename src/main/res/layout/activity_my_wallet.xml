<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrllow_mywallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wodm.android.view.newview.AtyTopLayout
            android:id="@+id/back_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            app:BackGroundColor="@color/color_f5c92f"
            app:CustomtitleTextColor="@color/color_3f190c"
            app:CustomtitleTextSize="@dimen/x36"
            app:Customtoptitle="@string/mine_wallet"
            app:leftBackGround="@mipmap/back"
            app:rightText="充值"
            app:rightTextColor="@color/color_3f190c"
            app:rightTextSize="@dimen/x24"
            app:rightType="0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y221"
            android:background="@color/color_ffffff">

            <ImageView
                android:id="@+id/icon_wallet"
                android:layout_width="@dimen/x92"
                android:layout_height="@dimen/y92"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y30"
                android:src="@mipmap/icon_wallet" />

            <LinearLayout
                android:id="@+id/ll_score_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_wallet"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y20"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text=":"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x24" />

                <TextView
                    android:id="@+id/score_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="203"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x24" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_jingyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_score_wallet"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/ll_score_describ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="已获得"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/x20" />

                    <TextView
                        android:id="@+id/current_score_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:gravity="center"
                        android:text="020"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/x20" />

                    <View
                        android:layout_width="@dimen/x2"
                        android:layout_height="@dimen/y10"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@color/color_efefef" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:gravity="center"
                        android:text="未获得"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/x20" />

                    <TextView
                        android:id="@+id/need_score_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:gravity="center"
                        android:text="012"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/x20" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/get_score_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rl_jingyan"
                android:layout_marginBottom="-5dp"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@+id/rl_jingyan"
                android:src="@mipmap/getscore_wallet" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y14"
            android:background="@color/color_efefef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y64"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical">

            <ImageView
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/vip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_weight="1"
                android:text="@string/vip_speed_hint"
                android:textColor="@color/color_ee974a"
                android:textSize="@dimen/x24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/kai_tong_wallet"
                android:layout_width="@dimen/x84"
                android:layout_height="@dimen/y42"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/kaitong_rectan"
                android:gravity="center"
                android:text="@string/open_vip_member"
                android:textColor="@color/color_ff6361"
                android:textSize="@dimen/x16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_efefef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y64"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x12"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pay_cartoon"
                android:layout_alignTop="@+id/pay_cartoon"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/color_b3d465" />

            <TextView
                android:id="@+id/pay_cartoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center"
                android:text="已购买动画/漫画"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/x24" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efefef"></View>
    </LinearLayout>


</ScrollView>
