<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_open_vip"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_72">
        <ImageView
            android:layout_marginLeft="@dimen/px_30"
            android:background="@mipmap/img_open_vip"
            android:id="@+id/img_open_vip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_toRightOf="@+id/img_open_vip"
            android:textColor="@color/color_f5912f"
            android:textSize="@dimen/text_size_24_px"
            android:text="开通VIP可享会员加速!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_open_vip"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/kaitong_rectan"
            android:text="@string/open_vip_member"
            android:textColor="@color/color_ff6361"
            android:textSize="@dimen/px_20" />
    </RelativeLayout>

</LinearLayout>