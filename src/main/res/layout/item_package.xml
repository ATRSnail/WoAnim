<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_degree"
            android:layout_width="@dimen/px_69"
            android:layout_height="@dimen/px_69"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_24_px"
            android:background="@drawable/btn_circle"/>

        <TextView
            android:layout_marginTop="@dimen/px_30"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_24_px"
            android:textColor="@color/color_999999"
            android:text="@string/open_vip_message_hint"
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>