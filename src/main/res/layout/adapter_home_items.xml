<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/px_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/img_mengga_movies" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_toRightOf="@+id/img_logo"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_30_px" />

        <ImageButton
            android:id="@+id/img_main_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/img_main_more" />
    </RelativeLayout>


    <org.eteclab.ui.widget.NoScrollGridView
        android:id="@+id/grid_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1" />


    <LinearLayout
        android:background="@color/color_efefef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wodm.android.view.newview.RoundAngleImageView
            android:id="@+id/img_angle_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/color_efefef"
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>