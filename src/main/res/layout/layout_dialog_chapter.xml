<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/px_60">

    <org.eteclab.ui.widget.NoScrollGridView
        android:id="@+id/grid_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_60"
        android:cacheColorHint="@android:color/transparent"
        android:horizontalSpacing="@dimen/px_12"
        android:listSelector="@android:color/transparent"
        android:numColumns="8"
        android:padding="@dimen/px_30"
        android:verticalSpacing="@dimen/px_12">

    </org.eteclab.ui.widget.NoScrollGridView>

    <ImageButton
        android:id="@+id/close_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:background="@null"
        android:src="@mipmap/close_black" />
</LinearLayout>
