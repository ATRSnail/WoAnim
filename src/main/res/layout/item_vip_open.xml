<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_vipopen_dapter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_195"
        android:background="@drawable/tv_vipopen"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/month_vipopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12个月"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_36_px" />

        <TextView
            android:id="@+id/meng_money_vipopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center"
            android:text="萌币12000"
            android:textColor="@color/color_cccccc"
            android:textSize="@dimen/text_size_28_px" />
    </LinearLayout>


</LinearLayout>