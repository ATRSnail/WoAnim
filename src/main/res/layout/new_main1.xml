<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_new_main_image"
            layout="@layout/new_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/ll_new_main_text"
            layout="@layout/new_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.wodm.android.view.newview.MyGridView
            android:id="@+id/new_main_image_no_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/px_16"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:verticalSpacing="@dimen/px_16">

        </com.wodm.android.view.newview.MyGridView>

    </LinearLayout>


</LinearLayout>